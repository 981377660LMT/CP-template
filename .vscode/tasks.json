    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "c++ build and run(g++, O0)",
            "command": "g++.exe -Wl,--stack=536870912 -DOY_LOCAL -lm -x c++ --std=c++20 -fexec-charset=GBK -g -o ${fileDirname}\\${fileBasenameNoExtension}.exe ${file} && ${fileDirname}\\${fileBasenameNoExtension}.exe",
            "group": "build",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "c++ build and run(clang++, O2)",
            "command": "clang++.exe -Wl,--stack=3836870912 -fstandalone-debug -DOY_LOCAL -lm -x c++ --std=c++20 -O2 -g -o ${fileDirname}\\${fileBasenameNoExtension}.exe ${file} && ${fileDirname}\\${fileBasenameNoExtension}.exe",
            "group": "build",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "c++ build(g++)",
            "command": "g++.exe",
            "args": [
                "-Wl,--stack=536870912",
                "-static",
                "-DOY_LOCAL",
                "-lm",
                "-x",
                "c++",
                "--std=c++20",
                "-g",
                "-fexec-charset=GBK",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "type": "shell",
            "label": "c++ build(clang++)",
            "command": "clang++.exe",
            "args": [
                "-Wl,--stack=536870912",
                "-fstandalone-debug",
                "-static-libgcc",
                "-DOY_LOCAL",
                "-lm",
                "-x",
                "c++",
                "--std=c++20",
                "-g",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "c++ run",
            "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "c++ run(txt)",
            "command": "${fileDirname}\\c.exe",
            "group": "test"
        },
        {
            "type": "shell",
            "label": "c++ build py",
            "command": "g++.exe -Wl,--stack=536870912 -DOY_LOCAL -lm -x c++ --std=c++20 -fexec-charset=GBK -O2 -o D:\\softwaredata\\vscode_file\\pyQPSLOpticalImages\\a.exe a.cpp",
            "problemMatcher": "$gcc",
            "group": "build"
        },
        {
            "type": "shell",
            "label": "C++ build and run(h)",
            "command": "g++.exe -Wl,--stack=536870912 -DOY_LOCAL -lm -x c++ --std=c++20 -fexec-charset=GBK -g -o ${fileDirname}\\b.exe b.cpp && ${fileDirname}\\b.exe",
            "group": "build",
            "problemMatcher": []
        },

    ]
}