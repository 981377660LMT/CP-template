{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "c++ build and run(clang++)",
            "command": "clang++ -fstandalone-debug -DOY_LOCAL -lm -x c++ --std=c++17 -O2 -g -o ${fileDirname}/${fileBasenameNoExtension} ${file} && ulimit -s unlimited && ${fileDirname}/${fileBasenameNoExtension}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "c++ build(clang++)",
            "command": "clang++",
            "args": [
                "-fstandalone-debug",
                "-static-libgcc",
                "-DOY_LOCAL",
                "-lm",
                "-x",
                "c++",
                "--std=c++17",
                "-g",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "${file}"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "c++ build and run(g++)",
            "command": "g++ -DOY_LOCAL -lm -x c++ --std=c++17  -fexec-charset=GBK -g -o ${fileDirname}\\${fileBasenameNoExtension} ${file} && ulimit -s unlimited && ${fileDirname}\\${fileBasenameNoExtension}",
            "group": "build",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "c++ build(g++)",
            "command": "g++",
            "args": [
                "-static",
                "-DOY_LOCAL",
                "-lm",
                "-x",
                "c++",
                "--std=c++17",
                "-g",
                "-fexec-charset=GBK",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}",
                "${file}"
            ],
            "problemMatcher": "$gcc",
            "group": "build"
        },
        {
            "type": "shell",
            "label": "c++ run",
            "command": "ulimit -s unlimited && ${fileDirname}\\${fileBasenameNoExtension}.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}